void drawJudge(int judgeId){
    if(judgeId == 0){
        drawWin();
    }else if(judgeId == 1){
        drawLose();
    }else{
        drawDraw();
    }
}


void drawJankenMark(int JankenId)
{
    if(JankenId == 0){
        drawGoo();
    }else if(JankenId == 1){
        drawChoki();
    }else{
        drawPaa();
    }   
}


