///////////////////////////
// Game Logic

int nowhand;
void handleMessage (int param1, int param2, int param3)
{   
    log(param1);
    log(param2);
    log(param3);
    log(myZyankenID);
    
    nowhand = getLocalConfig(myZyankenID);
    
    log(nowhand);
    
    
    if(nowhand == ROCK_ID)
    {
        if(param2 == PAPER_ID)
        {
            lose();
        }
        else if(param2 == SCISSORS_ID)
        {
            win();
        }
        else
        {
            draw();
        }
    } 
    else if(nowhand == SCISSORS_ID)
    {
        if(param2 == PAPER_ID)
        {
            win();
        }
        else if(param2 == SCISSORS_ID)
        {
            draw();
        }
        else
        {
            lose();
        }
    }
    else //if(myZyankenID = PAPER_ID)
    {
        if(param2 == PAPER_ID)
        {
            draw();
        }
        else if(param2 == SCISSORS_ID)
        {
            lose();
        }
        else
        {
            win();
        }
    }
    
    sceneState = RESULT_STATE;
}

void win()
{
    result = 0;
}

void lose()
{
    result = 1;
}

void draw()
{
    result = 2;
}

void StartJanken()
{
    //log(CurDeviceID);
    sendMessageToBlock( CurDeviceID, CurDeviceID ,getJankenHand(), 0 );
}

